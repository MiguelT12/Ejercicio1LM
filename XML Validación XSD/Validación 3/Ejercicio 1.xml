<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <!--xs:pattern y xs:length -->
  <xs:element name="clave1">
    <xs:simpleType>
      <xs:restriction base="xs:string">
        <xs:length value="10"/>
        <xs:pattern value="[a-zA-Z0-9]*"/>
      </xs:restriction>
    </xs:simpleType>
  </xs:element>

  <!--xs:pattern -->
  <xs:element name="clave2">
    <xs:simpleType>
      <xs:restriction base="xs:string">
        <xs:pattern value="[a-zA-Z0-9]{10}"/>
      </xs:restriction>
    </xs:simpleType>
  </xs:element>
</xs:schema>
